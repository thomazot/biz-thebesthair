.header
    @media media-min-lg
        z-index: 20
        padding-top: 20px
        padding-bottom: 20px
        background: white

    @media media-max-lg
        padding-right: (gap / 2)
        padding-left: 0

    &-container
        position: sticky
        top: 0
        margin-top: -(gap / 2)
        box-shadow: none

        @media media-min-lg
            margin-bottom: 51px !important
            transition: all .2s linear

            .scrolling--down &
                box-shadow: 0 1px 0 1px var(--color-border)