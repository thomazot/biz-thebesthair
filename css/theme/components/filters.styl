.filters
    > .title
        @media media-min-lg
            display: none

    &__filter
        .count
            display: none

        .a--0current, .a--0, .a--1
            color: var(--primary)
            font-weight: regular
            font-size: 14px

            @media media-max-lg
                color: var(--primary-contrast)

            &:hover
                color: @color
                text-decoration: underline

        &:hover
            box-shadow: none

        @media media-min-lg
            padding: 0
            box-shadow: none

    &__name
        display: flex
        justify-content: center
        align-items: center
        color: var(--primary)
        font-weight: medium
        font-size: 18px

        @media media-max-lg
            color: var(--primary-contrast)

        &:after
            flex: 1
            margin-left: 1rem
            min-width: 0
            height: 1px
            background: var(--color-border)
            content: ''