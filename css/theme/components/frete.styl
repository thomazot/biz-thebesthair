
.frete
    &__title
        justify-content: flex-start
        box-shadow: none
        font-weight: semibold
        font-size: 16px

        span
            display: none

        .ico
            width: 30px
            height: 28px

        &:after
            content: 'Calcule a entrega'

    &__content
        display: flex

    &__form
        position: relative
        flex: 0 1 290px
        margin-right: 20px
        min-width: 0

        label
            display: none

        .input-box
            flex: 1
            min-width: 0
            width: 100%

        .input-text
            padding-right: 100px
            padding-left: gap
            height: 50px
            border: 1px solid var(--color-border)
            box-shadow: 0 0 10px rgba(0, 0, 0, .1)

    &__actions
        position: absolute
        top: 0
        right: 0
        width: 95px
        height: 100%

        .btn
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 100%
            background: none
            box-shadow: none
            color: var(--primary)
            font-weight: bold
            font-size: 14px

            &:hover
                background: @background
                color: @color

            &:before
                content: 'Calcular'

            span
                display: none

    &__naosei
        display: flex
        justify-content: flex-start
        align-items: center
        margin-bottom: 0
        color: var(--color-text-gray)
        font-weight: medium
        font-size: 12px
        line-height: 1.3