.categories
    &__show
        order: -1
        background: var(--primary-contrast)
        color: var(--primary)

        &:hover
            background: @background
            color: @color

    @media media-max-lg
        .parent
            position: relative

            > ul
                display: none

            &:after
                content: ''

            > a
                display: flex
                justify-content: flex-start
                align-items: center
                min-height: 48px

            &:after
                icon('\f054')

                position: absolute
                top: 0
                right: 0
                z-index: 10
                display: flex
                justify-content: center
                align-items: center
                width: 48px
                height: 48px
                color: var(--primary-contrast)
                font-size: 20px
                transition: all .2s ease

            &.on
                &:after
                    transform: rotate(90deg)

                > ul
                    display: block

        .all-li--0
            padding-bottom: 0

    @media media-min-lg
        position: absolute
        top: 100%
        left: 0
        z-index: 10
        flex: 1
        margin-bottom: 0 !important
        min-width: 0
        width: 100%
        height: 35px
        background: none
        background: white
        transition: all .2s ease-in-out
        transition-delay: .1s

        .scrolling:not(.scrolling--up) &
            transform: translateY(-34px)

        &__block
            flex: 0 0 auto
            margin: -60px 0 0
            padding: 0
            min-width: 0
            border: 0

        .ul--0, .li--0, .a--0
            height: 100%

        .a--0
            display: flex
            justify-content: center
            align-items: center
            color: var(--primary)
            white-space: nowrap
            font-weight: medium
            font-size: 14px

            span
                display: flex
                flex: 0
                justify-content: center
                align-items: center
                height: 100%

            .ico
                margin: 0 0 0 5px
                width: 12px
                height: 7px
                fill: currentColor

        .box--1
            visibility: hidden
            flex-wrap: wrap
            padding: 0
            width: 100%
            border-bottom: solid 1px var(--color-border)
            background: white
            box-shadow: none
            opacity: 0
            transition: all .2s ease-in-out
            transition-delay: .4s
            transform: translateY(-10px)

        .li--0
            position: static
            flex: 0 0 auto
            min-width: 0

            &:hover
                .a--0
                    background: var(--primary)

                .box--1
                    visibility: visible
                    opacity: 1
                    opacity: 1
                    transform: translateY(0)

        .ul--0
            position: static
            justify-content: space-between

        &__title
            display: block
            display: flex
            flex: 0 0 100%
            justify-content: flex-start
            align-items: center
            height: 60px
            font-weight: bold
            font-size: 20px

        &__all
            .categories__title
                display: none

            a:hover
                box-shadow: none
                color: var(--primary)
                text-decoration: underline

        .ul--1, .all-ul--0
            margin: 0 auto
            min-width: 1px
            width: viewport

        .ul--1
            flex: 1 1 calc(100% - 495px)
            padding-bottom: 20px
            column-count: 2

        .li--1
            display: block
            break-inside: avoid

        .a--1
            padding: 0
            color: var(--primary)
            font-weight: regular
            font-size: 14px

            &:hover
                box-shadow: none
                color: @color
                text-decoration: underline
