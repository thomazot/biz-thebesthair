.products
    .cms-home .main &
        container()

    &__title
        font-weight: medium
        font-size: 20px

    &__item
        padding: 0

    &__actions
        margin-top: auto
        margin-right: -(gap / 2)
        margin-bottom: -(gap / 2)
        margin-left: -(gap / 2)

        @media media-min-lg
            opacity: 0
            transition: all .2s ease-in-out
            transform: translateY(10px)

        .button
            width: 100%
            height: 55px
            border-radius: 0
            background: var(--button)
            box-shadow: none
            color: var(--button-contrast)
            font-weight: bold
            font-size: 16px

            &:hover
                @media media-min-lg
                    background: var(--button-hover)
                    color: var(--button-hover-contrast)

    &__case
        position: relative
        padding: (gap / 2)
        box-shadow: none

        .link-wishlist
            position: absolute
            top: 0
            right: 0
            display: flex
            justify-content: center
            align-items: center
            width: 50px
            height: 50px
            color: var(--primary)

            @media media-min-lg
                opacity: 0
                transition: all .2s ease-in-out

            .ico
                width: 24px
                height: 28px
                fill: currentColor

        &:hover
            @media media-min-lg
                box-shadow: inset 0 0 0 1px var(--color-border)

                .products__actions
                    opacity: 1
                    transform: translateY(0)

                .link-wishlist
                    opacity: 1

    &__name
        display: block
        margin-bottom: (gap / 2)
        color: var(--primary)
        text-transform: none
        font-weight: medium
        font-size: 14px

        &:hover
            color: @color

    &--list
        .products
            &__actions
                margin-top: 0
                margin-left: auto
                padding-right: 16px
                opacity: 1
                transform: none