.jointsales
    @media media-max-sm
        container()

    @media media-min-sm
        padding-top: 50px
        border-top: solid 1px var(--color-border)

        &__title, &__content
            container()

    .owl-wrapper-outer
        border: 0
        box-sahdow: 0

    .more
        display: flex
        justify-content: center
        align-items: center
        margin-top: 20px
        margin-bottom: 20px
        width: 40px
        height: 40px
        border-radius: 0
        background: var(--primary)
        color: var(--primary-contrast)
        font-size: 12px
        transform: none

    select
        padding: 0 15px
        padding-right: 40px
        height: 50px
        border: solid 1px var(--color-border)
        border-radius: 0
        background: no-repeat url(down) center right 16px
        box-shadow: 0 0 10px rgba(0, 0, 0, .1)
        color: #C5D1D5
        font-size: 14px
        appearance: none

    &__item
        display: block
        flex: 1
        min-width: 0
        max-width: none

    &__current
        flex: 1
        padding: 0
        min-width: 0

        @media media-min-lg
            flex: 0 1 33.33%

        + .jointsales__list
            flex: 0 1 50%
            min-width: 0

            @media media-min-lg
                flex: 0 1 33.33%

        .thumb
            flex: 1
            margin-right: 0
            min-width: 0

    &__currentin
        display: block
        flex: 1
        min-width: 0
        box-shadow: none

    &__row
        padding: 0
        opacity: 0

        &.jointsales__options
            display: flex

        @media media-min-lg
            flex-wrap: nowrap
            align-items: center !important

        &.on
            opacity: 1

    &__essential
        margin: 0 20px 2px
        padding: 30px 30px 0
        min-width: 0
        width: calc(100% - 40px)
        border: solid 1px var(--color-border)
        border-radius: var(--radius) var(--radius) 0 0
        background: none
        color: var(--primary)

        @media media-min-lg
            flex: 0 1 355px

        @media media-max-sm
            margin-top: 20px

        &:before
            display: block
            padding-bottom: 16px
            content: 'Comprando junto vocÃª economiza'
            font-weight: bold
            font-size: 16px

    &__action
        margin: 20px -30px 0

        .btn
            display: flex
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 55px
            border: 0
            border-radius: 0
            background: var(--button)
            box-shadow: none
            font-weight: bold
            font-size: 16px

    &__name-product
        font-weight: medium
        font-size: 14px

        .more-name
            display: block
            padding: 10px 0

    &__totals
        display: flex
        align-items: center

        .economize
            display: none

        .todos-juntos
            margin-right: 16px
            font-size: 0

            .price
                color: var(--color-text-gray)
                text-decoration: line-through
                font-weight: medium
                font-size: 14px

        .comprando-junto
            font-size: 0

            .price
                color: var(--primary)
                font-weight: medium
                font-size: 18px

    &__payments
        margin-top: 10px

        .avista
            display: none

        .preco-parcelado-sem-juros
            + .preco-parcelado
                display: none

        .preco-parcelado-sem-juros, .preco-parcelado
            &, > span
                color: var(--secundary-contrast)
                font-weight: medium
                font-size: 14px

    &__currentin, &__item
        img
            width: 100%
            object-fit: contain

        .thumb
            margin-bottom: 16px

        .title
            margin-bottom: 20px
            padding-bottom: 20px
            border-bottom: solid 1px var(--border-products)
            color: var(--text-two)
            font-weight: medium
            font-size: 16px

        .info
            margin-top: auto

        .old-price
            .label
                display: none

            .price span
                color: var(--color-text-gray)
                font-weight: medium
                font-size: 14px

        .regular-price, .special-price
            .label
                display: none

            .price span
                color: var(--primary)
                font-weight: medium
                font-size: 18px

    &__title
        titleCollateral()