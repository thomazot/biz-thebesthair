.newsletter
    container()

    margin: 40px auto !important

    .input-text
        border: 1px solid var(--color-border)
        box-shadow: 0 0 10px rgba(0, 0, 0, .1)
        color: var(--primary)
        font-weight: regular
        font-size: 14px

        &::placeholder
            color: var(--color-text-gray)
            font-weight: medium

        &:focus::placeholder
            color: transparent

    &__form
        @media media-min-lg
            flex-wrap: nowrap

        @media media-max-sm
            display: flex
            flex-direction: column

    &__text
        display: flex
        order: -2
        align-items: center
        min-width: 0

        @media media-max-sm
            flex: 1
            width: 100%

        @media media-min-lg
            flex: 0 0 314px
            margin-bottom: 8px

        &, &.std, .title--sm
            color: var(--primary)
            font-weight: medium
            font-size: 16px

        .ico
            flex: 0 0 40px
            margin-right: 10px
            width: 40px
            height: 46px
            fill: currentColor

    &__name
        min-width: 0

        @media media-max-sm
            flex: 1
            width: 100%

        @media media-min-lg
            flex: 0 1 240px
            margin-left: auto
            padding-right: 20px

    &__email
        min-width: 0

        @media media-max-sm
            flex: 1
            width: 100%

        @media media-min-lg
            flex: 0 1 365px
            padding-right: 0

            .input-text
                padding-right: 120px

    &__submit
        min-width: 0

        @media media-max-sm
            flex: 1
            width: 100%

        @media media-min-lg
            position: absolute
            top: 50%
            right: 0
            flex: 0 1 110px
            padding-right: 0
            padding-left: 0
            transform: translateY(-50%)

    &__btn
        @media media-min-lg
            background: none
            box-shadow: none
            color: var(--primary)
            font-weight: medium
            font-size: 14px

    &__gender
        order: -1
        min-width: 0

        @media media-max-sm
            flex: 1
            width: 100%

        @media media-min-lg
            flex: 0 1 275px

        .label
            display: block
            order: -2
            color: var(--primary)
            font-weight: medium
            font-size: 14px
            opacity: 1

        .femele-label
            order: -1

        .male-label, .female-label
            flex: 1
            padding: 0
            min-width: 0
            border: 0
            color: var(--color-text-gray)
            font-weight: medium
            font-size: 14px

            &:before
                font-size: 39px

            &.checked
                background: none
                color: var(--primary)